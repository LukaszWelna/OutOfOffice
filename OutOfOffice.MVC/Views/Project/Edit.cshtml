@using OutOfOffice.Application.Project
@using OutOfOffice.Domain.Entities

@model EditProjectDto

@{
    ViewData["Title"] = "Edit project";
}

<div class="container col-xl-10 col-xxl-10 px-4 py-5">
    <div class="row align-items-center">
        <div class="col-md-10 mx-auto col-lg-6 p-4 rounded-3 form-column">
            <form id="leaveRequestForm" asp-action="Edit" method="post">
                <h2 class="form-header">Edit project</h2>
                <hr />
                <div class="form-floating mb-3">
                    <select asp-for="ProjectTypeId" asp-items="@(new SelectList(Model.ProjectTypes,
                        nameof(ProjectType.Id),
                        nameof(ProjectType.Name)))"
                            class="form-select form-select-md">
                        <option value="0">Please select one</option>
                    </select>
                    <label asp-for="ProjectTypeId">Project type</label>
                    <span asp-validation-for="ProjectTypeId" class="text-danger" id="projectTypeIdSpan"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="StartDate" type="date" class="form-control" placeholder="Start date"
                           value="@Model.StartDate.ToString("yyyy-MM-dd")" min="2000-01-01">
                    <label asp-for="StartDate" class="control-label">Start date</label>
                    <span asp-validation-for="StartDate" class="text-danger" id="startDateSpan"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="EndDate" type="date" class="form-control" placeholder="End date"
                           value="@Model.EndDate?.ToString("yyyy-MM-dd")" min="2000-01-01">
                    <label asp-for="EndDate" class="control-label">End date</label>
                    <span asp-validation-for="EndDate" class="text-danger" id="endDateSpan"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="ProjectManagerId" asp-items="@(new SelectList(Model.ProjectManagers,
                        nameof(Employee.Id),
                        nameof(Employee.FullName)))"
                            class="form-select form-select-md">
                        <option value="0">Please select one</option>
                    </select>
                    <label asp-for="ProjectManagerId">Project manager</label>
                    <span asp-validation-for="ProjectManagerId" class="text-danger" id="projectManagerIdSpan"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="StatusId" asp-items="@(new SelectList(Model.ProjectStatuses,
                        nameof(ProjectStatus.Id),
                        nameof(ProjectStatus.Name)))"
                            class="form-select form-select-md">
                        <option value="0">Please select one</option>
                    </select>
                    <label asp-for="StatusId">Status</label>
                    <span asp-validation-for="StatusId" class="text-danger" id="statusIdSpan"></span>
                </div>
                <div class="form-floating mb-3">
                    <textarea asp-for="Comment" class="form-control" placeholder="Comment"></textarea>
                    <label asp-for="Comment">Comment</label>
                    <span asp-validation-for="Comment" class="text-danger" id="commentIdSpan"></span>
                </div>
                <button id="projectSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>
